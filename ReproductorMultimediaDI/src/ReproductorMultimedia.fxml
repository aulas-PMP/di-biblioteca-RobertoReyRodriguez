<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.canvas.Canvas?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="ReproductorController">
    
    <!-- Barra lateral izquierda (Biblioteca) -->
    <left>
        <VBox fx:id="bibliotecaPanel">
            <Button fx:id="btnToggleBiblioteca" text="⏪" onAction="#toggleBiblioteca" />
            <ListView fx:id="listaArchivos" />
        </VBox>
    </left>

    <!-- Panel superior (Menú) -->
    <top>
        <MenuBar>
            <menus>
                <Menu text="Archivo">
                    <items>
                        <MenuItem text="Abrir Archivo" onAction="#abrirArchivo"/>
                        <MenuItem text="Abrir Directorio" onAction="#abrirDirectorio"/>
                    </items>
                </Menu>
                <Menu text="Acerca de">
                    <items>
                        <MenuItem text="Acerca de..." onAction="#mostrarAcercaDe"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <!-- Panel central con el reproductor -->
    <center>
        <StackPane fx:id="mediaContainer">
            <MediaView fx:id="mediaView" style="-fx-fit-height: 100%; -fx-fit-width: 100%;"/>
            <ImageView fx:id="audioPlaceholder" fitWidth="400" fitHeight="300" visible="false"/>
            <Canvas fx:id="audioVisualizer" width="400" height="300" visible="false"/>
        </StackPane>
    </center>

    <!-- Controles inferiores -->
    <bottom>
        <VBox spacing="10">
            <Slider fx:id="progressBar" min="0" max="100" value="0"/>
            <HBox alignment="CENTER" spacing="10">
                <Button text="▶" onAction="#playMedia"/>
                <Button text="⏸" onAction="#pauseMedia"/>
                <Button text="⏹" onAction="#stopMedia"/>
                <Button text="⏩" onAction="#cambiarVelocidadReproduccion" fx:id="btnCambiarVelocidad"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
